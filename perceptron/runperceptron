import numpy as np
from arff import Arff
from perceptron import PerceptronClassifier

filepath = "linsep2nonorigin.arff"
filepath = "data_banknote_authentication.arff"
af = Arff()
af.load_arff(filepath)
alldata = af.data
alllength = len(alldata)
doshuffle = False
if doshuffle:
    np.random.shuffle(alldata)
split = int(round(alllength * .7))
split = alllength
trainingset = alldata[:split]
testset = alldata[split:]
percept = PerceptronClassifier(shuffle=doshuffle, deterministic=10)
percept.fit(trainingset[:, :-1], trainingset[:, -1])
